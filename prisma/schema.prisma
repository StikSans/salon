generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  phone        String         @unique()
  name         String
  surName      String
  sex          Sex            @default(OTHER)
  password     String
  role         Role           @relation(fields: [roleId], references: [id])
  roleId       Int            @default(2)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  OpeningHours OpeningHours[]
}

model Role {
  id          Int    @id @default(autoincrement())
  name        String @unique()
  description String
  users       User[]
}

model Service {
  id            Int             @id @default(autoincrement())
  photo         String          @unique()
  name          String          @unique()
  price         Int
  description   String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  ServiceMaster ServiceMaster[]
}

model Master {
  id            Int             @id @default(autoincrement())
  name          String          @unique()
  photo         String
  surName       String
  openingHours  OpeningHours[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  ServiceMaster ServiceMaster[]
}

model ServiceMaster {
  id        Int     @id @default(autoincrement())
  master    Master  @relation(fields: [masterId], references: [id])
  masterId  Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int
}

model OpeningHours {
  id          Int      @id @default(autoincrement())
  openingTime String
  date        DateTime
  master      Master   @relation(fields: [masterId], references: [id])
  masterId    Int
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Sex {
  MALE
  FEMALE
  OTHER
}

enum RoleType {
  ADMIN
  USER
}
